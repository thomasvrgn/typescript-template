{
  "compilerOptions": {
    "rootDirs": [
      "src/"
    ],
    "outDir": "./dist",
    "watch": true,
    "target": "es5",
    "module": "CommonJS",
    "types": [
      "node"
    ],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {}
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "src/index.ts"
  ]
}